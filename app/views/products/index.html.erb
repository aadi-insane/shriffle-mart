<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1><i class="fas fa-store me-2"></i>Our Products</h1>
    <p class="text-muted mb-0">Discover amazing products at great prices</p>
  </div>
  <div class="d-flex align-items-center gap-3">
    <span class="badge bg-primary fs-6">
      <span id="results-count"><%= @products.count %></span> of <%= @products.count %> products
    </span>
    <button id="clear-filters" class="btn btn-outline-secondary btn-sm d-none">
      <i class="fas fa-times me-1"></i>Clear Filters
      <span id="active-filters-count" class="badge bg-danger ms-1 d-none">0</span>
    </button>
  </div>
</div>

<!-- Enhanced Search and Filter Bar -->
<div class="card mb-4 border-0 shadow-sm">
  <div class="card-body">
    <div class="row g-3">
      <!-- Search Input -->
      <div class="col-lg-4 col-md-6">
        <label class="form-label small text-muted fw-bold">SEARCH PRODUCTS</label>
        <div class="input-group">
          <span class="input-group-text bg-light border-end-0">
            <i class="fas fa-search text-muted"></i>
          </span>
          <input type="text" id="product-search" class="form-control border-start-0" 
                 placeholder="Search by name, brand, or description...">
          <div id="search-loading" class="input-group-text bg-light border-start-0 d-none">
            <div class="spinner-border spinner-border-sm text-primary" role="status">
              <span class="visually-hidden">Searching...</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Category Filter -->
      <div class="col-lg-2 col-md-6">
        <label class="form-label small text-muted fw-bold">CATEGORY</label>
        <select class="form-select" id="category-filter">
          <option value="">All Categories</option>
          <% Product.distinct.pluck(:category).compact.sort.each do |category| %>
            <option value="<%= category %>"><%= category.titleize %></option>
          <% end %>
        </select>
      </div>
      
      <!-- Brand Filter -->
      <div class="col-lg-2 col-md-6">
        <label class="form-label small text-muted fw-bold">BRAND</label>
        <select class="form-select" id="brand-filter">
          <option value="">All Brands</option>
          <% Product.distinct.pluck(:brand).compact.sort.each do |brand| %>
            <option value="<%= brand %>"><%= brand %></option>
          <% end %>
        </select>
      </div>
      
      <!-- Price Range Filter -->
      <div class="col-lg-2 col-md-6">
        <label class="form-label small text-muted fw-bold">PRICE RANGE</label>
        <select class="form-select" id="price-range">
          <option value="">Any Price</option>
          <option value="under-25">Under $25</option>
          <option value="25-50">$25 - $50</option>
          <option value="50-100">$50 - $100</option>
          <option value="over-100">Over $100</option>
        </select>
      </div>
      
      <!-- Sort Options -->
      <div class="col-lg-2 col-md-6">
        <label class="form-label small text-muted fw-bold">SORT BY</label>
        <select class="form-select" id="sort-filter">
          <option value="name">Name A-Z</option>
          <option value="price-low">Price: Low to High</option>
          <option value="price-high">Price: High to Low</option>
          <option value="rating">Highest Rated</option>
          <option value="newest">Newest First</option>
        </select>
      </div>
    </div>
    
    <!-- Quick Filter Tags -->
    <div class="mt-3 pt-3 border-top">
      <div class="d-flex flex-wrap gap-2 align-items-center">
        <small class="text-muted fw-bold me-2">QUICK FILTERS:</small>
        <button class="btn btn-outline-primary btn-sm quick-filter" data-filter="featured">
          <i class="fas fa-star me-1"></i>Featured
        </button>
        <button class="btn btn-outline-success btn-sm quick-filter" data-filter="on-sale">
          <i class="fas fa-tag me-1"></i>On Sale
        </button>
        <button class="btn btn-outline-info btn-sm quick-filter" data-filter="high-rated">
          <i class="fas fa-thumbs-up me-1"></i>4+ Stars
        </button>
        <button class="btn btn-outline-warning btn-sm quick-filter" data-filter="under-50">
          <i class="fas fa-dollar-sign me-1"></i>Under $50
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Products Grid -->
<div class="row" id="products-container">
  <% @products.each do |product| %>
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4 product-item" 
         data-name="<%= product.name.downcase %>" 
         data-brand="<%= product.brand&.downcase %>"
         data-category="<%= product.category %>"
         data-price="<%= product.price %>"
         data-rating="<%= product.rating || 0 %>">
      
      <div class="card product-card h-100 border-0 shadow-sm">
        <!-- Product Image -->
        <div class="product-image-container position-relative">
          <%= link_to product_path(product), class: "text-decoration-none" do %>
            <img src="<%= product.primary_image %>" 
                 class="card-img-top product-image" 
                 alt="<%= product.name %>"
                 loading="lazy">
          <% end %>
          
          <!-- Badges -->
          <div class="product-badges">
            <% if product.has_discount? %>
              <span class="badge bg-danger position-absolute top-0 start-0 m-2">
                <%= product.discount_percentage.round %>% OFF
              </span>
            <% end %>
            <% if product.is_featured? %>
              <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2">
                <i class="fas fa-star"></i> Featured
              </span>
            <% end %>
          </div>
        </div>
        
        <!-- Product Info -->
        <div class="card-body p-3">
          <!-- Brand -->
          <% if product.brand.present? %>
            <div class="product-brand mb-1">
              <small class="text-muted text-uppercase fw-bold"><%= product.brand %></small>
            </div>
          <% end %>
          
          <!-- Product Name -->
          <%= link_to product_path(product), class: "text-decoration-none text-dark" do %>
            <h6 class="product-title mb-2 lh-base">
              <%= truncate(product.name, length: 60, separator: ' ') %>
            </h6>
          <% end %>
          
          <!-- Rating -->
          <% if product.rating.present? && product.rating > 0 %>
            <div class="product-rating mb-2">
              <div class="d-flex align-items-center">
                <div class="stars me-2">
                  <% (1..5).each do |i| %>
                    <% if i <= product.rating_stars %>
                      <i class="fas fa-star text-warning"></i>
                    <% elsif i - 0.5 <= product.rating_stars %>
                      <i class="fas fa-star-half-alt text-warning"></i>
                    <% else %>
                      <i class="far fa-star text-muted"></i>
                    <% end %>
                  <% end %>
                </div>
                <small class="text-muted">
                  (<%= product.review_count || 0 %>)
                </small>
              </div>
            </div>
          <% end %>
          
          <!-- Price -->
          <div class="product-pricing mb-3">
            <div class="d-flex align-items-center">
              <span class="current-price fw-bold text-dark fs-5">
                $<%= sprintf("%.2f", product.price) %>
              </span>
              
              <% if product.has_discount? %>
                <span class="original-price text-muted text-decoration-line-through ms-2">
                  $<%= sprintf("%.2f", product.original_price) %>
                </span>
                <span class="savings text-success ms-2 small">
                  Save $<%= sprintf("%.2f", product.savings_amount) %>
                </span>
              <% end %>
            </div>
          </div>
          
          <!-- Stock Status -->
          <div class="stock-status mb-3">
            <% if product.in_stock? %>
              <% if product.low_stock? %>
                <small class="text-warning">
                  <i class="fas fa-exclamation-triangle me-1"></i>
                  Only <%= product.stock_quantity %> left!
                </small>
              <% else %>
                <small class="text-success">
                  <i class="fas fa-check-circle me-1"></i>
                  In Stock
                </small>
              <% end %>
            <% else %>
              <small class="text-danger">
                <i class="fas fa-times-circle me-1"></i>
                Out of Stock
              </small>
            <% end %>
          </div>
        </div>
        
        <!-- Card Footer -->
        <div class="card-footer bg-white border-0 p-3 pt-0">
          <div class="d-grid gap-2">
            <% if logged_in? %>
              <%= button_to add_to_cart_path(product), 
                  method: :post, 
                  remote: true,
                  class: "btn btn-primary add-to-cart-btn #{'disabled' unless product.in_stock?}",
                  disabled: !product.in_stock?,
                  data: { product_id: product.id } do %>
                <i class="fas fa-cart-plus me-2"></i>
                <%= product.in_stock? ? 'Add to Cart' : 'Out of Stock' %>
              <% end %>
            <% else %>
              <%= link_to login_path, class: "btn btn-outline-primary" do %>
                <i class="fas fa-sign-in-alt me-2"></i>Login to Buy
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- Empty State -->
<div id="no-products" class="text-center py-5 d-none">
  <div class="mb-4">
    <i class="fas fa-search text-muted" style="font-size: 4rem; opacity: 0.3;"></i>
  </div>
  <h4 class="text-muted">No products found</h4>
  <p class="text-muted">Try adjusting your search or filter criteria</p>
</div>
