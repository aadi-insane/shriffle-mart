<div class="text-center">
  <div class="mb-4">
    <div class="text-success" style="font-size: 4rem;">
      âœ…
    </div>
  </div>
  
  <h1 class="text-success">Thank You!</h1>
  <p class="lead">Your order has been placed successfully.</p>
  
  <div class="card mt-4">
    <div class="card-header">
      <h5>Order Details</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <p><strong>Order ID:</strong> #<%= @order.id %></p>
          <p><strong>Name:</strong> <%= @order.name %></p>
          <p><strong>Email:</strong> <%= @order.email %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Total:</strong> $<%= sprintf("%.2f", @order.total) %></p>
          <p><strong>Date:</strong> <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        </div>
      </div>
      
      <h6 class="mt-3">Shipping Address:</h6>
      <div class="bg-light p-3 rounded">
        <%= simple_format(@order.address) %>
      </div>
      
      <h6 class="mt-3">Items Ordered:</h6>
      <div class="table-responsive">
        <table class="table table-sm">
          <thead>
            <tr>
              <th>Product</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_items.each do |item| %>
              <tr>
                <td><%= item.product.name %></td>
                <td><%= item.quantity %></td>
                <td>$<%= sprintf("%.2f", item.price) %></td>
                <td>$<%= sprintf("%.2f", item.price * item.quantity) %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr class="table-active">
              <th colspan="3">Total:</th>
              <th>$<%= sprintf("%.2f", @order.total) %></th>
            </tr>
          </tfoot>
        </table>
      </div>
      
      <div class="mt-3">
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i>
          <strong>Note:</strong> This is a demo order. No real payment has been processed and no items will be shipped.
        </div>
      </div>
    </div>
  </div>
  
  <div class="mt-4">
    <%= link_to "Continue Shopping", products_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
