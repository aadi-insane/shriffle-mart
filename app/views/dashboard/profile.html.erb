<div class="row">
  <div class="col-md-3">
    <%= render 'sidebar' %>
  </div>
  
  <div class="col-md-9">
    <h1>Profile Settings</h1>
    <p class="text-muted">Manage your account information</p>
    
    <div class="card">
      <div class="card-header">
        <h5>Personal Information</h5>
      </div>
      <div class="card-body">
        <%= form_with model: @user, url: dashboard_update_profile_path, local: true do |form| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :name, class: "form-label" %>
                <%= form.text_field :name, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :email, class: "form-label" %>
                <%= form.email_field :email, class: "form-control" %>
              </div>
            </div>
          </div>
          
          <div class="d-flex justify-content-between">
            <%= link_to "Back to Dashboard", dashboard_index_path, class: "btn btn-outline-secondary" %>
            <%= form.submit "Update Profile", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Account Statistics -->
    <div class="card mt-4">
      <div class="card-header">
        <h5>Account Statistics</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <p><strong>Member since:</strong> <%= @user.created_at.strftime("%B %Y") %></p>
            <p><strong>Total orders:</strong> <%= @user.orders.count %></p>
          </div>
          <div class="col-md-6">
            <p><strong>Saved addresses:</strong> <%= @user.addresses.count %></p>
            <p><strong>Last login:</strong> <%= @user.updated_at.strftime("%B %d, %Y") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
