<div class="row">
  <div class="col-md-3">
    <%= render 'sidebar' %>
  </div>
  
  <div class="col-md-9">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><i class="fas fa-map-marker-alt me-2 text-primary"></i>My Addresses</h1>
        <p class="text-muted mb-0">Manage your delivery addresses</p>
      </div>
      <div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAddressModal">
          <i class="fas fa-plus me-2"></i>Add New Address
        </button>
      </div>
    </div>

    <% if @addresses.any? %>
      <!-- Address Statistics -->
      <div class="row mb-4">
        <div class="col-md-6">
          <div class="card text-center border-0 bg-light">
            <div class="card-body">
              <i class="fas fa-home text-primary mb-2" style="font-size: 2rem;"></i>
              <h4 class="text-primary mb-0"><%= @addresses.count %></h4>
              <small class="text-muted">Saved Addresses</small>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card text-center border-0 bg-light">
            <div class="card-body">
              <i class="fas fa-star text-warning mb-2" style="font-size: 2rem;"></i>
              <h4 class="text-warning mb-0">1</h4>
              <small class="text-muted">Default Address</small>
            </div>
          </div>
        </div>
      </div>

      <!-- Addresses Grid -->
      <div class="row">
        <% @addresses.each do |address| %>
          <div class="col-md-6 mb-4">
            <div class="card address-card h-100 <%= 'border-primary' if address.is_default? %>">
              <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="mb-0">
                    <i class="fas fa-home me-2 text-primary"></i>
                    <%= address.name %>
                  </h6>
                  <% if address.is_default? %>
                    <span class="badge bg-primary">
                      <i class="fas fa-star me-1"></i>Default
                    </span>
                  <% end %>
                </div>
                <div class="dropdown">
                  <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-ellipsis-v"></i>
                  </button>
                  <ul class="dropdown-menu">
                    <li>
                      <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#editAddressModal<%= address.id %>">
                        <i class="fas fa-edit me-2"></i>Edit
                      </button>
                    </li>
                    <% unless address.is_default? %>
                      <li>
                        <%= link_to set_default_address_path(address), method: :patch, class: "dropdown-item" do %>
                          <i class="fas fa-star me-2"></i>Set as Default
                        <% end %>
                      </li>
                    <% end %>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                      <%= link_to address_path(address), 
                          method: :delete, 
                          class: "dropdown-item text-danger",
                          data: { 
                            confirm: "Are you sure you want to delete this address?" 
                          } do %>
                        <i class="fas fa-trash me-2"></i>Delete
                      <% end %>
                    </li>
                  </ul>
                </div>
              </div>
              
              <div class="card-body">
                <div class="address-details">
                  <p class="mb-2">
                    <i class="fas fa-map-marker-alt text-muted me-2"></i>
                    <strong><%= address.address_line_1 %></strong>
                  </p>
                  <% if address.address_line_2.present? %>
                    <p class="mb-2 text-muted">
                      <span class="ms-3"><%= address.address_line_2 %></span>
                    </p>
                  <% end %>
                  <p class="mb-2 text-muted">
                    <i class="fas fa-city text-muted me-2"></i>
                    <%= address.city %>, <%= address.state %>
                  </p>
                  <p class="mb-2 text-muted">
                    <i class="fas fa-mail-bulk text-muted me-2"></i>
                    <%= address.postal_code %>
                  </p>
                  <p class="mb-0 text-muted">
                    <i class="fas fa-flag text-muted me-2"></i>
                    <%= address.country %>
                  </p>
                </div>
              </div>
              
              <div class="card-footer bg-light">
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted">
                    <i class="fas fa-clock me-1"></i>
                    Added <%= time_ago_in_words(address.created_at) %> ago
                  </small>
                  <div>
                    <% unless address.is_default? %>
                      <%= link_to set_default_address_path(address), 
                          method: :patch, 
                          class: "btn btn-sm btn-outline-primary",
                          data: { bs_toggle: "tooltip", bs_title: "Set as default" } do %>
                        <i class="fas fa-star"></i>
                      <% end %>
                    <% end %>
                    <button class="btn btn-sm btn-outline-secondary" 
                            data-bs-toggle="modal" 
                            data-bs-target="#editAddressModal<%= address.id %>"
                            title="Edit address">
                      <i class="fas fa-edit"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Edit Address Modal -->
          <div class="modal fade" id="editAddressModal<%= address.id %>" tabindex="-1">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">
                    <i class="fas fa-edit me-2"></i>Edit Address
                  </h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <%= form_with model: address, url: address_path(address), method: :patch, local: true do |form| %>
                  <div class="modal-body">
                    <div class="row">
                      <div class="col-md-12 mb-3">
                        <%= form.label :name, class: "form-label" %>
                        <%= form.text_field :name, class: "form-control", placeholder: "e.g., Home, Office" %>
                      </div>
                      <div class="col-md-12 mb-3">
                        <%= form.label :address_line_1, "Address Line 1", class: "form-label" %>
                        <%= form.text_field :address_line_1, class: "form-control", placeholder: "Street address" %>
                      </div>
                      <div class="col-md-12 mb-3">
                        <%= form.label :address_line_2, "Address Line 2 (Optional)", class: "form-label" %>
                        <%= form.text_field :address_line_2, class: "form-control", placeholder: "Apartment, suite, etc." %>
                      </div>
                      <div class="col-md-6 mb-3">
                        <%= form.label :city, class: "form-label" %>
                        <%= form.text_field :city, class: "form-control" %>
                      </div>
                      <div class="col-md-6 mb-3">
                        <%= form.label :state, class: "form-label" %>
                        <%= form.text_field :state, class: "form-control" %>
                      </div>
                      <div class="col-md-6 mb-3">
                        <%= form.label :postal_code, class: "form-label" %>
                        <%= form.text_field :postal_code, class: "form-control" %>
                      </div>
                      <div class="col-md-6 mb-3">
                        <%= form.label :country, class: "form-label" %>
                        <%= form.text_field :country, class: "form-control" %>
                      </div>
                      <div class="col-md-12">
                        <div class="form-check">
                          <%= form.check_box :is_default, class: "form-check-input" %>
                          <%= form.label :is_default, "Set as default address", class: "form-check-label" %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <%= form.submit "Update Address", class: "btn btn-primary" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    <% else %>
      <!-- Empty State -->
      <div class="text-center py-5">
        <div class="mb-4">
          <i class="fas fa-map-marker-alt text-muted" style="font-size: 5rem; opacity: 0.3;"></i>
        </div>
        <h3 class="text-muted mb-3">No Addresses Saved</h3>
        <p class="text-muted mb-4">
          Add your delivery addresses to make checkout faster and easier.
        </p>
        <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#addAddressModal">
          <i class="fas fa-plus me-2"></i>Add Your First Address
        </button>
      </div>
    <% end %>
  </div>
</div>

<!-- Add Address Modal -->
<div class="modal fade" id="addAddressModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fas fa-plus me-2"></i>Add New Address
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <%= form_with model: @new_address, url: addresses_path, local: true do |form| %>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-12 mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "e.g., Home, Office, Mom's House" %>
              <div class="form-text">Give this address a memorable name</div>
            </div>
            <div class="col-md-12 mb-3">
              <%= form.label :address_line_1, "Address Line 1", class: "form-label" %>
              <%= form.text_field :address_line_1, class: "form-control", placeholder: "Street address" %>
            </div>
            <div class="col-md-12 mb-3">
              <%= form.label :address_line_2, "Address Line 2 (Optional)", class: "form-label" %>
              <%= form.text_field :address_line_2, class: "form-control", placeholder: "Apartment, suite, etc." %>
            </div>
            <div class="col-md-6 mb-3">
              <%= form.label :city, class: "form-label" %>
              <%= form.text_field :city, class: "form-control", placeholder: "City" %>
            </div>
            <div class="col-md-6 mb-3">
              <%= form.label :state, class: "form-label" %>
              <%= form.text_field :state, class: "form-control", placeholder: "State/Province" %>
            </div>
            <div class="col-md-6 mb-3">
              <%= form.label :postal_code, class: "form-label" %>
              <%= form.text_field :postal_code, class: "form-control", placeholder: "ZIP/Postal Code" %>
            </div>
            <div class="col-md-6 mb-3">
              <%= form.label :country, class: "form-label" %>
              <%= form.text_field :country, class: "form-control", placeholder: "Country", value: "India" %>
            </div>
            <div class="col-md-12">
              <div class="form-check">
                <%= form.check_box :is_default, class: "form-check-input", checked: @addresses.empty? %>
                <%= form.label :is_default, "Set as default address", class: "form-check-label" %>
                <div class="form-text">This will be used as your primary delivery address</div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= form.submit "Add Address", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
.address-card {
  transition: all 0.3s ease;
  border: 1px solid #e9ecef;
}

.address-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.address-card.border-primary {
  border-color: #007bff !important;
  box-shadow: 0 0 0 0.1rem rgba(0, 123, 255, 0.25);
}

.address-details p {
  margin-bottom: 0.5rem;
}

.address-details i {
  width: 16px;
  text-align: center;
}

.modal-header {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  color: white;
}

.modal-header .btn-close {
  filter: invert(1);
}
</style>